#pragma once

/* --- Project info --- */

/**
 * Full name of this project
 */
constexpr auto PROJECT_NAME = "@PROJECT_NAME@";

/**
 * Name of package
 */
constexpr auto PROJECT_PACKAGE = "@PROJECT_PACKAGE@";

/**
 * Project version number
 */
constexpr auto PROJECT_VERSION = "@PROJECT_VERSION@";

/**
 * Address where bug reports for this project should be sent
 */
constexpr auto PROJECT_BUGREPORT = "@PROJECT_BUGREPORT@";

/**
 * Full name and version of this project
 */
constexpr auto PROJECT_STRING = "@PROJECT_NAME@ @PROJECT_VERSION@";

/**
 * Project URL
 */
constexpr auto PROJECT_URL = "@PROJECT_URL@";


/* --- Current git repo info --- */

/**
 * Origin URL of current repository
 */
constexpr auto GIT_ORIGIN_URL = "@GIT_ORIGIN_URL@";

/**
 * Git origin repo owner
 */
constexpr auto GIT_ORIGIN_OWNER = "@GIT_ORIGIN_OWNER@";

/**
 * Git origin repo name
 */
constexpr auto GIT_ORIGIN_REPO = "@GIT_ORIGIN_REPO@";

/**
 * Current branch of git repo
 */
constexpr auto GIT_BRANCH = "@GIT_BRANCH@";

/**
 * Current git commit id (with "-dirty" appended if dirty source tree)
 */
constexpr auto GIT_COMMIT_ID = "@RELEASE_IDENTIFIER@";


/* --- I18N --- */

/**
 * Enable i18n
 */
#cmakedefine ENABLE_NLS

/**
 * Gettext package
 */
constexpr auto GETTEXT_PACKAGE = "@GETTEXT_PACKAGE@";

/**
 * Enable audio features
 */
#cmakedefine ENABLE_AUDIO
